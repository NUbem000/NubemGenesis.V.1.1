# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=nubemgenesis
DATABASE_PASSWORD=your-secure-password
DATABASE_NAME=nubemgenesis

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security Configuration
API_KEY_MASTER_KEY=your-32-character-master-key-here!!
JWT_SECRET=your-32-character-jwt-secret-here!!!
SESSION_SECRET=your-32-character-session-secret!!!

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://nubemgenesis.ai,https://www.nubemgenesis.ai
IFRAME_ORIGINS=https://nubemgenesis.ai

# Rate Limiting
RATE_LIMIT_WHITELIST=

# Logging
LOG_LEVEL=info
LOG_PATH=./logs

# Authentication
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=your-secure-admin-password

# File Limits
FLOWISE_FILE_SIZE_LIMIT=50mb
MAX_UPLOAD_SIZE=50mb

# ==============================
# ORCHESTRATOR V2 RAG SETTINGS
# ==============================
USE_ORCHESTRATOR_V2=true
USE_LITELLM_V2=true
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-west-2