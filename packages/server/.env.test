# Test environment configuration
NODE_ENV=test
PORT=3001

# Database - Use SQLite for tests
DATABASE_TYPE=sqlite
DATABASE_PATH=:memory:

# Disable features for testing
DISABLE_TELEMETRY=true
DISABLE_LOGS=true
LOG_LEVEL=error

# Test credentials
FLOWISE_USERNAME=testuser
FLOWISE_PASSWORD=testpassword123
JWT_SECRET=test-jwt-secret-key-for-testing-only-32chars
API_KEY_MASTER_KEY=test-master-key-for-api-encryption-32chars
SESSION_SECRET=test-session-secret-key-for-testing-32chars

# Test configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# Disable external services
LANGCHAIN_TRACING_V2=false
ENABLE_WEBSOCKET=false
ENABLE_METRICS=false