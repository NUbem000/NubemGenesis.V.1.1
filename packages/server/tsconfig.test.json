{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "types": ["jest", "node"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/__tests__/types"
    ]
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/__tests__/**/*",
    "src/__tests__/types/**/*.d.ts"
  ]
}