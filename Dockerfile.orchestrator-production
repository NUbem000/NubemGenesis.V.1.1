# Production orchestrator with pre-built components
FROM node:20-slim

WORKDIR /app

# Copy the entire project (assuming it's already built locally)
COPY . .

# Install only production dependencies
RUN npm install -g pnpm@9.15.0 && \
    pnpm install --prod --frozen-lockfile

# Create necessary directories
RUN mkdir -p .capability-cache evaluations logs

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3000
ENV USE_LITELLM_V2=false

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:3000/api/v1/orchestrate/health || exit 1

# Run the production orchestrator
CMD ["node", "deploy-orchestrator-production.js"]